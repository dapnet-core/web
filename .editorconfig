[*]
charset=utf-8
end_of_line=crlf
insert_final_newline=false
indent_style=space
tab_width=4

[{*.ng,*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=space
indent_size=4

[{*.jhm,*.xslt,*.xul,*.rng,*.xsl,*.xsd,*.ant,*.tld,*.fxml,*.jrxml,*.xml,*.jnlp,*.wsdl}]
indent_style=space
indent_size=4

[*.svg]
indent_style=space
indent_size=4

[*.css]
indent_style=space
indent_size=4

[*.vue]
indent_style=tab
indent_size=4

[*.js]
indent_style=tab
indent_size=4

[*.json]
indent_style=tab
indent_size=4